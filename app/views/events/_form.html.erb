
<% if @event.errors.any? %>
    <h4 style="color:#FF5500"><%= @event.errors.full_messages.to_sentence %></h4>
<% end %>



<%= form_for @event do |f|%>
<div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
</div>
<div class="form-group">
    <%= f.label :start_of_event %>
    <%= f.datetime_field :start_of_event %>
</div>
<div class="form-group">
    <%= f.label :end_of_event %>
    <%= f.datetime_field :end_of_event %>
</div>
<div class="form-group">
    <%= f.label :location %>
    <%= f.text_field :location %>
</div>
<div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
</div>

<%= f.submit %>
<% end %>
